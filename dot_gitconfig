[user]
  name = Vincent Garrigues
  email = vincent@garriguv.io

[alias]
  s        = status
  c        = commit
  p        = push
  co       = checkout
  cb       = checkout -b
  rev      = rev-parse --short HEAD
  subup    = submodule update --recursive --init
  subclean = submodule foreach --recursive git clean -xfdf
  subreset = submodule foreach --recursive git reset --hard
  df       = diff
  pr       = pull --rebase
  puff     = pull --ff-only
  lg       = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  fup      = "!f() { COMMIT_HASH=$(git log --oneline -n 10 | fzf | awk '{ print $1 }'); git commit --fixup=$COMMIT_HASH && git rebase --autosquash $COMMIT_HASH~; }; f"
  fupi     = "!f() { COMMIT_HASH=$(git log --oneline -n 10 | fzf | awk '{ print $1 }'); git commit --fixup=$COMMIT_HASH && git rebase -i --autosquash $COMMIT_HASH~; }; f"

[branch "main"]
  mergeoptions = --no-ff

[color]
  branch = auto
  diff   = auto
  status = auto
  ui     = true

[pull]
  ff = only

[push]
  default = simple
  autoSetupRemote = true

[rebase]
  autoStash = true

[remote "origin"]
  prune = true

[core]
  editor       = vim
  excludesfile = ~/.gitignore

[includeIf "gitdir:dance-electric/"]
  path = .gitconfig-dance

[init]
  defaultBranch = main
